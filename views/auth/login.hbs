<body class="login">
<div class = "centerLogin">
<h2 class = "centerHeaderLogin">Login to be up to date about music events</h2>
<form action="/login" method="POST" id="login-form">
<label for="" class="textFieldLeft loginLabel">Email</label>
<input class = "loginInput" type="text" name="email">
<br><br>
<label for=""class="textFieldLeft loginLabel">Password</label>
<input class="loginInput" type="password" name="password">
<br><br>
<button type="submit" class = "loginButton">Login</button>
</form>
</div>
{{#if errorMessage}}
<div class="error-message">{{errorMessage}}</div>
{{/if}}
</body>